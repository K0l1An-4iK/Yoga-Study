<div class="main-container">
    <h2>Отчет по доходам</h2>

    <!-- Выбор периода -->
    <div class="period-selector">
        <h3>Выберите период</h3>
        <div class="date-inputs">
            <div class="date-input">
                <label for="startDate">Начальная дата:</label>
                <input type="date" id="startDate" @bind="startDate" @bind:format="yyyy-MM-dd" />
            </div>
            <div class="date-input">
                <label for="endDate">Конечная дата:</label>
                <input type="date" id="endDate" @bind="endDate" @bind:format="yyyy-MM-dd" />
            </div>
            <button class="apply-btn" @onclick="LoadData">Применить</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <RadzenProgressBar Mode="ProgressBarMode.Indeterminate" />
            <p>Загрузка данных...</p>
        </div>
    }
    else if (!sampleData.Any())
    {
        <div class="no-data">
            <p>Нет данных для отображения</p>
        </div>
    }
    else
    {
        <RadzenCard Variant="Variant.Outlined" class="chart-card">
            <!-- Круговая диаграмма -->
            <RadzenChart Style="width: 100%; height: 400px;">
                <RadzenDonutSeries Data=@sampleData
                                   CategoryProperty="Category"
                                   ValueProperty="Value"
                                   Fills=@colors>
                    <ChildContent>
                        <RadzenSeriesDataLabels Visible="true" />
                    </ChildContent>
                    <TooltipTemplate Context="data">
                        <div style="padding: 8px; font-size: 14px;">
                            <strong>@data.Category</strong><br />
                            Количество: @data.Value (@GetPercentage(data.Value)%)<br />
                            Цена: @(GetSubscriptionPrice(data.Category)?.ToString("C"))
                        </div>
                    </TooltipTemplate>
                </RadzenDonutSeries>
                <RadzenLegend Position="LegendPosition.Right" />
            </RadzenChart>

            <!-- Таблица с процентным соотношением -->
            <div class="table-container" style="margin-top: 20px;">
                <table class="subscription-table">
                    <thead>
                        <tr>
                            <th>Тип абонемента</th>
                            <th>Количество</th>
                            <th>Доля</th>
                            <th>Общий доход</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in sampleData)
                        {
                            <tr>
                                <td>@item.Category</td>
                                <td>@item.Value</td>
                                <td>@GetPercentage(item.Value)%</td>
                                <td>@((item.Value * GetSubscriptionPrice(item.Category) ?? 0).ToString("C"))</td>
                            </tr>
                        }
                        <tr class="total-row">
                            <td>Итого</td>
                            <td>@sampleData.Sum(x => x.Value)</td>
                            <td>100%</td>
                            <td>@sampleData.Sum(x => x.Value * (GetSubscriptionPrice(x.Category) ?? 0)).ToString("C")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </RadzenCard>

        <!-- Гистограмма (чистый HTML/CSS) -->
        <div class="histogram-container">
            <h3>Распределение продаж по датам</h3>
            <div class="histogram">
                @foreach (var item in histGram.OrderBy(x => x.Category))
                {
                    var heightPercentage = (item.Value / (double)histGram.Max(x => x.Value)) * 100;
                    <div class="histogram-bar" title="@item.Category: @item.Value продаж"
                         style="height: @(heightPercentage)%; background-color: @GetBarColor(item);">
                        <span class="histogram-value">@item.Value</span>
                    </div>
                }
            </div>
            <div class="histogram-labels">
                @foreach (var item in histGram.OrderBy(x => x.Category))
                {
                    <div class="histogram-label">@DateTime.Parse(item.Category).ToString("dd.MM")</div>
                }
            </div>
        </div>

        <!-- Таблица доходов за период -->
        <div class="income-table-container">
            <h3>Доходы за период с @startDate.ToString("dd.MM.yyyy") по @endDate.ToString("dd.MM.yyyy")</h3>
            <table class="income-table">
                <thead>
                    <tr>
                        <th>Дата</th>
                        <th>Тип операции</th>
                        <th>Описание</th>
                        <th>Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var purchaseTotal = 0;
                        var renewalTotal = 0;
                    }
                    @foreach (var income in filteredIncomes.OrderByDescending(x => x.date))
                    {
                        var isPurchase = income.Descript.Contains("покупка", StringComparison.OrdinalIgnoreCase);
                        var isRenewal = income.Descript.Contains("продление", StringComparison.OrdinalIgnoreCase);

                        <tr class="@(isPurchase ? "purchase-row" : isRenewal ? "renewal-row" : "")">
                            <td>@income.date.ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (isPurchase)
                                {
                                    <span>Покупка</span>
                                    purchaseTotal += income.sum;
                                }
                                else if (isRenewal)
                                {
                                    <span>Продление</span>
                                    renewalTotal += income.sum;
                                }
                                else
                                {
                                    <span>Другое</span>
                                }
                            </td>
                            <td>@income.Descript</td>
                            <td>@income.sum.ToString("C")</td>
                        </tr>
                    }
                    <tr class="total-row">
                        <td colspan="2">Итого покупки:</td>
                        <td></td>
                        <td>@purchaseTotal.ToString("C")</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="2">Итого продления:</td>
                        <td></td>
                        <td>@renewalTotal.ToString("C")</td>
                    </tr>
                    <tr class="grand-total-row">
                        <td colspan="2">Общий итог:</td>
                        <td></td>
                        <td>@filteredIncomes.Sum(x => x.sum).ToString("C")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>

