@code {
    private bool isLoading = false;
    List<Report> incomes = new();
    List<Sub_Client> abonements = new();
    List<ChartData> abonementCard = new();
    List<Subscription> subscriptions = new();
    List<ChartData> histGram = new();
    List<Report> filteredIncomes = new();

    DateTime startDate = DateTime.Today.AddMonths(-1);
    DateTime endDate = DateTime.Today;

    IEnumerable<ChartData> sampleData => abonementCard;

    IEnumerable<string> colors = new List<string>
    {
        "#FF6384", "#36A2EB", "#FFCE56",
        "#4BC0C0", "#9966FF", "#FF9F40"
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            incomes = await Report.GetListIncomes(dbConnection);
            abonements = await Sub_Client.GetListAbonementCl(dbConnection, startDate, endDate);
            subscriptions = await Subscription.GetList(dbConnection);
            abonementCard = chDt(subscriptions, abonements);
            histGram = getHistoGramData(abonements);
            filteredIncomes = incomes
                .Where(x => x.date >= startDate && x.date <= endDate)
                .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка загрузки данных: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private List<ChartData> chDt(List<Subscription> subscriptions, List<Sub_Client> abonements)
    {
        List<ChartData> abonementCard = new List<ChartData>();
        foreach (var sub in subscriptions)
        {
            int value = abonements.Count(ab => ab.sub_id == sub.sub_id);
            abonementCard.Add(new ChartData(sub.sub_name, value));
        }
        return abonementCard;
    }

    private double? GetSubscriptionPrice(string categoryName)
    {
        return subscriptions.FirstOrDefault(s => s.sub_name == categoryName)?.price;
    }

    private string GetPercentage(double value)
    {
        double total = sampleData.Sum(x => x.Value);
        return total == 0 ? "0" : ((value / total) * 100).ToString("N1");
    }

    private List<ChartData> getHistoGramData(List<Sub_Client> abonements)
    {
        return abonements
            .GroupBy(x => x.start_time.Date)
            .Select(g => new ChartData(g.Key.ToString("yyyy-MM-dd"), g.Count()))
            .ToList();
    }

    private string GetBarColor(ChartData item)
    {
        var maxValue = histGram.Max(x => x.Value);
        var ratio = (double)item.Value / maxValue;
        var red = (int)(255 * ratio);
        var blue = (int)(255 * (1 - ratio));
        return $"rgb({red}, 100, {blue})";
    }
}