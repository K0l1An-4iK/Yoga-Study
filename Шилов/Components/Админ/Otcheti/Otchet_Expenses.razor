<div class="main-container">
    <h2>Отчет по расходам</h2>

    <!-- Выбор периода -->
    <div class="period-selector">
        <h3>Выберите период</h3>
        <div class="date-inputs">
            <div class="date-input">
                <label for="startDate">Начальная дата:</label>
                <input type="date" id="startDate" @bind="startDate" @bind:format="yyyy-MM-dd" />
            </div>
            <div class="date-input">
                <label for="endDate">Конечная дата:</label>
                <input type="date" id="endDate" @bind="endDate" @bind:format="yyyy-MM-dd" />
            </div>
            <button class="apply-btn" @onclick="LoadData">Применить</button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <RadzenProgressBar Mode="ProgressBarMode.Indeterminate" />
            <p>Загрузка данных...</p>
        </div>
    }
    else if (!expenses.Any())
    {
        <div class="no-data">
            <p>Нет данных для отображения</p>
        </div>
    }
    else
    {
        <RadzenCard Variant="Variant.Outlined" class="chart-card">
            <!-- Круговая диаграмма по категориям -->
            <RadzenChart Style="width: 100%; height: 400px;">
                <RadzenDonutSeries Data=@categoryData
                                   CategoryProperty="Category"
                                   ValueProperty="Value"
                                   Fills=@categoryColors>
                    <ChildContent>
                        <RadzenSeriesDataLabels Visible="true" />
                    </ChildContent>
                    <TooltipTemplate Context="data">
                        <div style="padding: 8px; font-size: 14px;">
                            <strong>@data.Category</strong><br />
                            Сумма: @data.Value.ToString("C")<br />
                            Доля: @GetCategoryPercentage(data.Value)%
                        </div>
                    </TooltipTemplate>
                </RadzenDonutSeries>
                <RadzenLegend Position="LegendPosition.Right" />
            </RadzenChart>

            <!-- Таблица с процентным соотношением по категориям -->
            <div class="table-container" style="margin-top: 20px;">
                <table class="category-table">
                    <thead>
                        <tr>
                            <th>Категория расходов</th>
                            <th>Сумма</th>
                            <th>Доля</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in categoryData)
                        {
                            <tr>
                                <td>@item.Category</td>
                                <td>@item.Value.ToString("C")</td>
                                <td>@GetCategoryPercentage(item.Value)%</td>
                            </tr>
                        }
                        <tr class="total-row">
                            <td>Итого</td>
                            <td>@categoryData.Sum(x => x.Value).ToString("C")</td>
                            <td>100%</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </RadzenCard>

        <!-- Гистограмма расходов по датам -->
        <div class="histogram-container">
            <h3>Распределение расходов по датам</h3>
            <div class="histogram">
                @foreach (var item in expenseHistogram.OrderBy(x => x.Category))
                {
                    var heightPercentage = (item.Value / (double)expenseHistogram.Max(x => x.Value)) * 100;
                    <div class="histogram-bar" title="@item.Category: @item.Value.ToString("C")"
                         style="height: @(heightPercentage)%; background-color: @GetBarColor(item);">
                        <span class="histogram-value">@item.Value.ToString("C")</span>
                    </div>
                }
            </div>
            <div class="histogram-labels">
                @foreach (var item in expenseHistogram.OrderBy(x => x.Category))
                {
                    <div class="histogram-label">@DateTime.Parse(item.Category).ToString("dd.MM")</div>
                }
            </div>
        </div>

        <!-- Таблица всех расходов за период -->
        <div class="expense-table-container">
            <h3>Все расходы за период с @startDate.ToString("dd.MM.yyyy") по @endDate.ToString("dd.MM.yyyy")</h3>
            <div class="table-wrapper">
                <table class="expense-table">
                    <thead>
                        <tr>
                            <th style="width: 100px;">Дата</th>
                            <th style="width: 150px;">Категория</th>
                            <th style="width: 250px;">Описание</th>
                            <th style="width: 120px;">Сумма</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expense in filteredExpenses.OrderByDescending(x => x.date))
                        {
                            <tr>
                                <td>@expense.date.ToString("dd.MM.yyyy")</td>
                                <td>@expense.category</td>
                                <td>@expense.Descript</td>
                                <td>@expense.sum.ToString("C")</td>
                            </tr>
                        }
                        <tr class="total-row">
                            <td colspan="3">Итого за период:</td>
                            <td>@filteredExpenses.Sum(x => x.sum).ToString("C")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

