@page "/subscriptionManager"
@using Шилов.Components.Classes
@using Npgsql
@inject NpgsqlConnection dbConnection
@inject IJSRuntime JSRuntime

<Sidebar />
<link href="/TableStyle.css" rel="stylesheet" />
<link href="/ModalWindowStyle.css" rel="stylesheet" />
<div class="main-content">
    <div class="zg">
        <h2>Справочник абонементов</h2>
        <button @onclick="ShowAddModal" class="action-btn add-button">
            <i class="fas fa-plus"></i> Добавить
        </button>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-danger">@message</div>
    }

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Цена</th>
                <th>Дней действия</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in subscriptions)
            {
                <tr>
                    <td>@sub.sub_id</td>
                    <td>@sub.sub_name</td>
                    <td>@sub.price.ToString("N2")</td>
                    <td>@sub.duration_days</td>
                    <td>
                        <button @onclick="() => ShowEditModal(sub)" class="action-btn editButton">
                            <i class="fas fa-edit"></i>
                            Редактировать
                        </button>
                        <button @onclick="() => DeleteSubscription(sub.sub_id)" class="action-btn deleteButton">
                            <i class="fas fa-trash"></i>
                            Удалить
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Модальное окно добавления -->
@if (showAddModal)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <h3>Добавление абонемента</h3>
            @if (!string.IsNullOrEmpty(message))
            {
                <div class="error-message">@message</div>
            }
            <div class="modal-body">
                <div class="form-group">
                    <label>Название</label>
                    <input type="text"  @bind="newSubscription.sub_name" class="form-input" />
                </div>
                <div class="form-group">
                    <label>Цена (руб):</label>
                    <input type="number" step="0.01" @bind="newSubscription.price" class="form-input" />
                </div>
                <div class="form-group">
                    <label>Длительность (дней):</label>
                    <input type="number" @bind="newSubscription.duration_days" class="form-input" />
                </div>
                <div class="modal-buttons">
                    <button @onclick="AddSubscription" class="save-button">Добавить</button>
                    <button @onclick="CloseModal" class="cancel-button">Отмена</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Модальное окно редактирования -->
@if (showEditModal)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <h3>Редактирование абонемента</h3>
            <div class="modal-body">
                <div class="form-group">
                    <label>Название</label>
                    <input type="text" @bind="currentSubscription.sub_name" class="form-input" />
                </div>
                <div class="form-group">
                    <label>Цена (руб):</label>
                    <input type="number" step="0.01" @bind="currentSubscription.price" class="form-input" />
                </div>
                <div class="form-group">
                    <label>Длительность (дней):</label>
                    <input type="number" @bind="currentSubscription.duration_days" class="form-input" />
                </div>
                <div class="modal-buttons">
                    <button @onclick="SaveSubscription" class="save-button">Сохранить</button>
                    <button @onclick="CloseModal" class="cancel-button">Отмена</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .zg {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    }

    .zg h2 {
    margin: 0;
    font-size: 1.5rem;
    color: #2c3e50;
    }
</style>

@code {
    private List<Subscription> subscriptions = new();
    private Subscription currentSubscription = new();
    private Subscription newSubscription = new();
    private bool showAddModal = false;
    private bool showEditModal = false;
    private string message = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubscriptions();
    }

    private async Task LoadSubscriptions()
    {
        try
        {
            subscriptions = await Subscription.GetList(dbConnection);
            message = string.Empty;
        }
        catch (Exception ex)
        {
            message = $"Ошибка загрузки данных: {ex.Message}";
        }
    }

    private void ShowAddModal()
    {
        newSubscription = new Subscription();
        showAddModal = true;
        message = string.Empty;
    }

    private void ShowEditModal(Subscription sub)
    {
        currentSubscription = new Subscription
            {
                sub_id = sub.sub_id,
                sub_name = sub.sub_name,
                price = sub.price,
                duration_days = sub.duration_days
            };
        showEditModal = true;
        message = string.Empty;
    }

    private void CloseModal()
    {
        showAddModal = false;
        showEditModal = false;
        message = string.Empty;
    }

    private async Task AddSubscription()
    {
        if (string.IsNullOrWhiteSpace(newSubscription.sub_name))
        {
            message = "Цена обязательно для заполнения";
            return;
        }

        if (newSubscription.price <= 0)
        {
            message = "Цена должна быть больше 0";
            return;
        }

        if (newSubscription.duration_days <= 0)
        {
            message = "Длительность должна быть больше 0 дней";
            return;
        }

        try
        {
            await Subscription.Add(newSubscription, dbConnection);
            await LoadSubscriptions();
            CloseModal();
        }
        catch (Exception ex)
        {
            message = $"Ошибка при добавлении: {ex.Message}";
        }
    }

    private async Task SaveSubscription()
    {
        if (string.IsNullOrWhiteSpace(currentSubscription.sub_name))
        {
            message = "Название обязательно для заполнения";
            return;
        }

        if (currentSubscription.price <= 0)
        {
            message = "Цена должна быть больше 0";
            return;
        }

        if (currentSubscription.duration_days <= 0)
        {
            message = "Длительность должна быть больше 0 дней";
            return;
        }

        try
        {
            await Subscription.Update(currentSubscription, dbConnection);
            await LoadSubscriptions();
            CloseModal();
        }
        catch (Exception ex)
        {
            message = $"Ошибка при сохранении: {ex.Message}";
        }
    }

    private async Task DeleteSubscription(int id)
    {
        bool confirm = await JSRuntime.InvokeAsync<bool>("confirm", "Вы уверены, что хотите удалить этот абонемент?");
        if (!confirm) return;

        List<Client> clients = await Client.GetListClient(dbConnection);
        List<Sub_Client> sub_Clients = await Sub_Client.GetListAbonementCl(dbConnection);
        List<Sub_Client> sub_Cl = new List<Sub_Client>();
        foreach(var sc in sub_Clients)
        {
            if(id == sc.sub_id)
            {
                sub_Cl.Add(sc);
            }
        }

        List<Client> newCl = new List<Client>();

        foreach(var cl in clients)
        {
            foreach(var sc in sub_Cl)
            {
                if(cl.client_abonemnt == sc.sub_cl_id)
                {
                    newCl.Add(cl);
                }
            }
        }

        try
        {
            foreach(var cl in newCl)
            {
                await Sub_Client.DeleteSubCLient(cl, dbConnection);
            }
            await Subscription.Delete(id, dbConnection);
            await LoadSubscriptions();
        }
        catch (Exception ex)
        {
            message = $"Ошибка при удалении: {ex.Message}";
        }
    }
}