    }

        .timeline:before {
            content: '';
            position: absolute;
            left: 20px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e0e0e0;
        }

    .timeline-item {
        position: relative;
        margin-bottom: 25px;
    }

    .timeline-date {
        position: absolute;
        left: -50px;
        width: 40px;
        text-align: center;
        background: #3498db;
        color: white;
        border-radius: 6px;
        padding: 5px 0;
    }

        .timeline-date .day {
            display: block;
