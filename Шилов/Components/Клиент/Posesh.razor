            background: #2980b9;
        }

</style>

@code {
    [Parameter] public int Id { get; set; }

    Client client = new Client();

    Group group = new Group();

    List<Shedule> listPos = new List<Shedule>();

    protected override async Task OnInitializedAsync()
    {
        client = await Client.GetClient(Id, dbConnection);
        group = await Group.GetGroup(client.group_id, dbConnection);
    }

    private async Task showPos()
    {
        List<Shedule> shedules = await Shedule.GetPos(dbConnection, client.group_id);
        foreach (var sh in shedules)
        {
            if (Choice(sh.peoples, client.client_Id))
            {
                listPos.Add(sh);
            }
        }
    }

    private bool Choice(int[] num, int id)
    {
        foreach (int n in num)
        {
            if (id == n)
            {
                return true;
            }
        }
        return false;
    }
}