    }

    .attendance-header {
        padding: 20px;
        background: linear-gradient(135deg, #3498db, #2c3e50);
        color: white;
        text-align: center;
    }

        .attendance-header h2 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
        }

    .client-name {
        margin: 5px 0 0;
        font-size: 16px;
        opacity: 0.9;
    }

    .attendance-body {
        padding: 20px;
    }

    /* Timeline styles */
    .timeline {
