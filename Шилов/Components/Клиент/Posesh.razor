@page "/pos/{Id:int}"
@using Шилов.Components.Classes;
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@using Npgsql
@inject NpgsqlConnection dbConnection
@inject IJSRuntime JSRuntime
<SidebarForClient ClientId="@Id" />

<div class="attendance-container">
    <div class="attendance-card">
        <div class="attendance-header">
            <h2>Посещаемость клиента</h2>
            <p class="client-name">@client.LastName @client.FirstName</p>
        </div>

        <div class="attendance-body">
            @if (listPos.Any())
            {
                <div class="timeline">
                    @foreach (var pos in listPos)
                    {
                        <div class="timeline-item">
                            <div class="timeline-date">
                                <span class="day">@pos.Date.ToString("dd")</span>
                                <span class="month">@pos.Date.ToString("MMM")</span>
                            </div>
                            <div class="timeline-content">
                                <div class="session-info">
                                    <div class="info-row">
                                        <span class="info-icon"><i class="far fa-clock"></i></span>
                                        <span class="info-text">@(pos.StartTime / 1000 / 60 / 60):00 - @(pos.EndTime / 1000 / 60 / 60):00</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-icon"><i class="fas fa-users"></i></span>
                                        <span class="info-text">@group.name</span>
                                    </div>
                                    <div class="info-row">
                                        <span class="info-icon"><i class="fas fa-door-open"></i></span>
                                        <span class="info-text">Зал №@pos.number_room</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="far fa-calendar-check empty-icon"></i>
                    <p>Нет данных о посещениях</p>
                    <button @onclick="showPos" class="refresh-btn">
                        <i class="fas fa-sync-alt"></i> Загрузить посещения
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<style>
